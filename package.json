{
  "name": "retroify.js",
  "version": "0.2.0",
  "description": "A library to apply retro 8-bit styling to web pages",
  "repository": {
    "type": "git",
    "url": "https://github.com/rbonestell/retroify.js.git"
  },
  "bugs": {
    "url": "https://github.com/rbonestell/retroify.js/issues"
  },
  "keywords": [
    "css",
    "style",
    "theme",
    "retro",
    "8-bit",
    "pixel",
