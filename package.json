    "arcade",
    "nostalgia",
    "vintage",
    "filter",
    "effect",
    "web",
    "browser",
    "transform",
    "stylesheet",
    "ui"
  ],
  "private": false,
  "main": "src/retroify.js",
  "files": [
    "src/retroify.js",
    "out/retroify.min.js"
  ],
  "author": "Bobby Bonestell <rbonestell@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
